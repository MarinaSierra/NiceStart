<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_musicraft"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_musicraft"
        android:supportsRtl="true"
        android:theme="@style/Theme.NiceStart"
        tools:targetApi="31">
        <activity
            android:name=".MainBn"
            android:exported="true" />
        <activity
            android:name=".MainBab"
            android:exported="true" />
        <activity
            android:name=".cargaSplash"
            android:exported="false" />
        <activity
            android:name=".Main"
            android:allowTaskReparenting="true"
            android:exported="true"
            android:theme="@style/Theme.Nicestart.ActionBar.Transparent" />
        <activity
            android:name=".editProfile"
            android:exported="true"
            android:label="Edit your profile"
            android:parentActivityName=".Profile"
            android:theme="@style/Theme.Nicestart.ActionBar.Transparent" />
        <activity
            android:name=".Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Profile"
            android:allowTaskReparenting="true"
            android:exported="true"
            android:label="Profile"
            android:theme="@style/Theme.Nicestart.ActionBar.Transparent" />
        <activity
            android:name=".SignUp"
            android:exported="true"
            android:label="Sign Up"
            android:parentActivityName=".Login"
            android:theme="@style/Theme.Nicestart.ActionBar.Transparent" />
        <activity
            android:name=".Login"
            android:exported="true"
            android:label="Login"
            android:theme="@style/Theme.Nicestart.ActionBar.Transparent" />
    </application>

</manifest>